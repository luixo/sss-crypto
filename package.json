{
  "version": "0.0.0",
  "name": "sss-crypto",
  "private": true,
  "main": "index.ts",
  "type": "module",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "start": "node --import=tsx index.tsx",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,ts,tsx,json}'",
    "format:verify": "prettier --check '**/*.{js,ts,tsx,json}'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix . --ext .ts,.tsx",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "~12.0.0",
    "ink": "4.4.0",
    "prettier": "^3.2.5",
    "react": "~18.2.0",
    "secrets.js": "git+https://git@github.com/grempe/secrets.js.git",
    "tsx": "^4.20.3",
    "valibot": "^0.29.0"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.61",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.26",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^15.2.2",
    "mock-fs": "^5.2.0",
    "pre-commit": "^1.2.2",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "pre-commit": [
    "typecheck",
    "lint-staged"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  },
  "lint-staged": {
    "*.{j,t}s{,x}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
